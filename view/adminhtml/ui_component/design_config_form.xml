<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="other_settings">
        <fieldset name="breeze">
            <settings>
                <level>1</level>
                <collapsible>true</collapsible>
                <label translate="true">Breeze</label>
            </settings>
            <field name="breeze_enabled" formElement="select">
                <settings>
                    <dataType>string</dataType>
                    <label translate="true">Enable Breeze Experience</label>
                    <notice translate="true">Breeze module will replace all scripts with its own simplified version. It will also remove all custom and third-party modules scripts.</notice>
                    <dataScope>breeze_enabled</dataScope>
                </settings>
                <formElements>
                    <select>
                        <settings>
                            <options class="Swissup\Breeze\Model\Config\Source\YesNoTheme"/>
                        </settings>
                    </select>
                </formElements>
            </field>
            <field name="breeze_excluded_urls" formElement="textarea">
                <settings>
                    <dataType>string</dataType>
                    <label translate="true">Disable Breeze for specified URLs</label>
                    <notice translate="true">One url per line. Example: /helpdesk or ?param=1</notice>
                    <tooltip>
                        <description translate="true">Breeze will be disabled on this pages</description>
                    </tooltip>
                    <dataScope>breeze_excluded_urls</dataScope>
                </settings>
                <formElements>
                    <textarea>
                        <settings>
                            <rows>3</rows>
                        </settings>
                    </textarea>
                </formElements>
            </field>
            <field name="breeze_excluded_urls_exceptions" formElement="textarea">
                <settings>
                    <dataType>string</dataType>
                    <label translate="true">Exceptions for Disable Breeze URLs</label>
                    <notice translate="true">One url per line. Example: /helpdesk-with-breeze</notice>
                    <tooltip>
                        <description translate="true">Breeze will be enabled on this pages</description>
                    </tooltip>
                    <dataScope>breeze_excluded_urls_exceptions</dataScope>
                </settings>
                <formElements>
                    <textarea>
                        <settings>
                            <rows>3</rows>
                        </settings>
                    </textarea>
                </formElements>
            </field>
            <field name="breeze_responsive_images" formElement="select">
                <settings>
                    <dataType>string</dataType>
                    <label translate="true">Enable Responsive Images</label>
                    <notice translate="true">This feature allows to serve most suitable image size per device. Theme developer must describe srcset property in view.xml file in order to enable this feature.</notice>
                    <dataScope>breeze_responsive_images</dataScope>
                </settings>
                <formElements>
                    <select>
                        <settings>
                            <options class="Swissup\Breeze\Model\Config\Source\YesNoTheme"/>
                        </settings>
                    </select>
                </formElements>
            </field>
            <field name="breeze_debug_mode" formElement="select">
                <settings>
                    <dataType>string</dataType>
                    <label translate="true">Debug Mode</label>
                    <notice translate="true"><![CDATA[Allows forcing "Breeze Experience" using ?breeze=1 query string. Or, use ?breeze=1&compat=1 to force "Better compatibility" mode.]]></notice>
                    <dataScope>breeze_debug_mode</dataScope>
                </settings>
                <formElements>
                    <select>
                        <settings>
                            <options class="Magento\Config\Model\Config\Source\YesNo"/>
                        </settings>
                    </select>
                </formElements>
            </field>
            <fieldset name="experimental">
                <settings>
                    <level>2</level>
                    <collapsible>true</collapsible>
                    <label translate="true">Experimental Settings</label>
                </settings>
                <field name="breeze_experimental_better_compatibility" formElement="select">
                    <settings>
                        <dataType>text</dataType>
                        <label translate="true">Better Compatibility</label>
                        <notice translate="true">When enabled, Breeze will fallback to Luma-based components if integration is missing.</notice>
                        <dataScope>breeze_experimental_better_compatibility</dataScope>
                    </settings>
                    <formElements>
                        <select>
                            <settings>
                                <options class="Magento\Config\Model\Config\Source\YesNo"/>
                            </settings>
                        </select>
                    </formElements>
                </field>
                <field name="breeze_experimental_better_compatibility_ignore" formElement="textarea">
                    <settings>
                        <dataType>text</dataType>
                        <label translate="true">Excluded from Better Compatibility</label>
                        <notice translate="true">One alias or path per line. Use asterisk to ignore whole path: Vendor_Module/*</notice>
                        <tooltip>
                            <description><![CDATA[Examples:<br/>Vendor_Module/js/component<br/>Vendor_Module/*<br/>mage/component<br/>mage/*]]></description>
                        </tooltip>
                        <dataScope>breeze_experimental_better_compatibility_ignore</dataScope>
                    </settings>
                    <formElements>
                        <textarea>
                            <settings>
                                <rows>5</rows>
                            </settings>
                        </textarea>
                    </formElements>
                </field>
            </fieldset>
        </fieldset>
    </fieldset>
</form>

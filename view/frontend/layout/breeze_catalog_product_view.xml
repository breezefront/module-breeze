<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="breeze.container">
            <block class="Swissup\Breeze\Block\HtmlTemplate"
                name="breeze.breadcrumbs"
                template="Magento_Theme::breadcrumbs.html"/>
        </referenceContainer>

        <referenceBlock name="product.info.media.image" template="Swissup_Breeze::catalog/product/gallery.phtml"/>
        <referenceContainer name="skip_gallery_before.wrapper" remove="true"/>
        <referenceContainer name="skip_gallery_after.wrapper" remove="true"/>
        <referenceBlock name="skip_gallery_after.target" remove="true"/>
        <referenceBlock name="skip_gallery_before.target" remove="true"/>
    </body>
</page>
